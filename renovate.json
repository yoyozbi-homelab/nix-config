{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly"
  ],
  "semanticCommits": "enabled",
  "ignorePaths": [
    "node_modules/**",
    ".venv/**",
    "venv/**",
    "**/flake.lock"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Rancher HelmChart versions (Helm repository)",
      "managerFilePatterns": [
        "^nixos/_mixins/k3s/manifests/[^/]+\\.ya?ml$"
      ],
      "matchStrings": [
        "kind: HelmChart[\\s\\S]*?repo: (?<registryUrl>https?://[^\\s]+)[\\s\\S]*?chart: (?<depName>[\\w\\-]+)[\\s\\S]*?version: (?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Rancher HelmChart versions (OCI charts)",
      "managerFilePatterns": [
        "^nixos/_mixins/k3s/manifests/[^/]+\\.ya?ml$"
      ],
      "matchStrings": [
        "kind: HelmChart[\\s\\S]*?chart: oci://[\\s\\S]*?/(?<depName>[\\w\\-]+)[\\s\\S]*?version: (?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Group Kubernetes and Helm Chart updates together",
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "Kubernetes and Helm Charts",
      "commitMessagePrefix": "chore(k8s): "
    },
    {
      "description": "GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "commitMessagePrefix": "ci(actions): "
    },
    {
      "description": "Automatically rebase non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "rebaseWhen": "behind-base-branch"
    }
  ]
}
