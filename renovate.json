{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly"
  ],
  "semanticCommits": "enabled",
  "ignorePaths": [
    "node_modules/**",
    ".venv/**",
    "venv/**",
    "**/flake.lock"
  ],
  "helm-values": {
    "managerFilePatterns": [
      "nixos/_mixins/k3s/manifests/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "nixos/_mixins/k3s/manifests/.+\\.ya?ml$"
    ]
  },
  "packageRules": [
    {
      "description": "Group Kubernetes and Helm Chart updates together",
      "matchManagers": [
        "kubernetes",
        "helm-values"
      ],
      "groupName": "Kubernetes and Helm Charts",
      "commitMessagePrefix": "chore(k8s): "
    },
    {
      "description": "GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "commitMessagePrefix": "ci(actions): "
    },
    {
      "description": "Automatically rebase non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "rebaseWhen": "behind-base-branch"
    }
  ]
}
