{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly"
  ],
  "enabledManagers": [
    "github-actions",
    "kubernetes",
    "helm-values"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/.git/**",
    "**/flake.lock"
  ],
  "packageRules": [
    {
      "description": "Group Kubernetes and Helm Chart updates together",
      "matchManagers": [
        "kubernetes",
        "helm-values"
      ],
      "groupName": "Kubernetes and Helm Charts",
      "commitMessagePrefix": "chore(k8s): "
    },
    {
      "description": "GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "commitMessagePrefix": "ci(actions): "
    }
  ]
}
